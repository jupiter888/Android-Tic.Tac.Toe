<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dtracy.myapplication.MainActivity">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableGameBoard"
        android:gravity="top"
        android:visibility="visible">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button2"
                android:layout_column="6"
                android:visibility="visible" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button3"
                android:layout_column="12"
                android:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/tableGameBoard"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button4"
                android:layout_below="@+id/tableGameBoard"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="visible" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button5"
                android:layout_column="6"
                android:visibility="visible" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button6"
                android:layout_column="12"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:id="@+id/tableRow">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button7"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tableRow"
                android:layout_alignStart="@+id/tableRow"
                android:visibility="visible" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button8"
                android:layout_column="6"
                android:visibility="visible" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text=" "
                android:id="@+id/button9"
                android:layout_column="12"
                android:visibility="visible" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press New Game To Start"
        android:id="@+id/textGameStatus"
        android:layout_below="@+id/tableGameBoard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textSize="18sp"
        android:gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/buttonNewGame"
        android:layout_below="@+id/textGameStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        android:textSize="18sp" />

</RelativeLayout>
